{
  "manifest_version": 3,
  "name": "Send to ChatGPT",
  "version": "1.3",
  "description": "Send selected text to ChatGPT via context menu and icon click",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon.png",
      "48": "img/icon.png",
      "128": "img/icon.png"
    }
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "<all_urls>"
  ]
}
