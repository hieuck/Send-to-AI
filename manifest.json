{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/hieuck/send-to-ai",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "default_locale": "vi",
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "img/icon.png",
      "48": "img/icon.png",
      "128": "img/icon.png"
    }
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://gemini.google.com/*", "https://claude.ai/*", "https://poe.com/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
