{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.3",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "default_locale": "vi",
  "locales": {
    "en": "locales/en/messages.json",
    "es": "locales/es/messages.json",
    "fr": "locales/fr/messages.json",
    "vi": "locales/vi/messages.json"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon.png",
      "48": "img/icon.png",
      "128": "img/icon.png"
    }
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "<all_urls>"
  ]
}
